{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "target": "es2022",
    "module": "preserve",
    "moduleResolution": "bundler",

    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "bad-bits",
    "piece-retriever",
    "indexer",
    "eslint.config.js",
    "worker-configuration.d.ts"
  ],
  "exclude": ["dist/**/*", "*/test", "subgraph"]
}
